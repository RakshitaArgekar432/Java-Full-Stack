import java.util.Scanner;
public class expenditure {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

       int[] List = new int[4];   
        int total = 0;

        System.out.println("Enter 4 expenditures:");

        for (int i = 0; i < List.length; i++) {
            List[i] = sc.nextInt();
            total += List[i];   
        }

        System.out.println("Today's expenditure is: " + total);
    }
}
